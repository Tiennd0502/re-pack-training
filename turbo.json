{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["build/output/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^dev:repack", "^dev:profile"],
      "cache": false,
      "persistent": true
    },
    "dev:repack": {
      "cache": false,
      "persistent": true
    },
    "dev:profile": {
      "cache": false,
      "persistent": true
    },
    "build:apk": {
      "cache": false,
      "persistent": true
    },
    "build:bundle": {
      "cache": false,
      "persistent": true
    }
  }
}
