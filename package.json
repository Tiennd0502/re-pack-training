{
  "name": "RepackApp",
  "private": true,
  "scripts": {
    "setup": "pnpm install",
    "dev": "turbo run dev:android",
    "dev:repack": "turbo run dev:android --filter=RepackApp",
    "dev:profile": "turbo run dev:android --filter=ProfileRemote",
    "clean": "turbo run clean:android",
    "clean:repack": "turbo run clean:android --filter=RepackApp",
    "clean:profile": "turbo run clean:android --filter=ProfileRemote",
    "build": "turbo run build",
    "build:repack:apk": "turbo run build:apk --filter=RepackApp",
    "build:profile:apk": "turbo run build:apk --filter=ProfileRemote",
    "build:profile:bundle": "turbo run build:bundle --filter=ProfileRemote",
    "build:apk": "pnpm run build:repack:apk",
    "build:bundle": "pnpm run build:profile:bundle",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky install"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.5",
    "typescript": "5.9.2",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
