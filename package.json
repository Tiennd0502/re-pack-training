{
  "name": "RepackApp",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "setup": "pnpm install",
    "dev": "turbo run dev:android",
    "dev:repack": "turbo run dev:android --filter=RepackApp",
    "dev:profile": "turbo run dev:android --filter=ProfileRemote",
    "dev:product": "turbo run dev:android --filter=ProductRemote",
    "dev:cart": "turbo run dev:android --filter=CartRemote",
    "dev:shipping": "turbo run dev:android --filter=ShippingAddressRemote",
    "dev:rm:profile": "turbo run dev:rm --filter=ProfileRemote",
    "dev:rm:product": "turbo run dev:rm --filter=ProductRemote",
    "dev:rm:cart": "turbo run dev:rm --filter=CartRemote",
    "dev:rm:shipping": "turbo run dev:rm --filter=ShippingAddressRemote",
    "dev:rm-all": "turbo run dev:rm --filter=ProfileRemote --filter=ProductRemote --filter=CartRemote --filter=ShippingAddressRemote",
    "clean": "turbo run clean:android",
    "clean:repack": "turbo run clean:android --filter=RepackApp",
    "clean:profile": "turbo run clean:android --filter=ProfileRemote",
    "clean:product": "turbo run clean:android --filter=ProductRemote",
    "clean:cart": "turbo run clean:android --filter=CartRemote",
    "clean:shipping": "turbo run clean:android --filter=ShippingAddressRemote",
    "build": "turbo run build",
    "build:repack:apk": "turbo run build:apk --filter=RepackApp",
    "build:profile:apk": "turbo run build:apk --filter=ProfileRemote",
    "build:profile:bundle": "turbo run build:bundle --filter=ProfileRemote",
    "build:product:apk": "turbo run build:apk --filter=ProductRemote",
    "build:product:bundle": "turbo run build:bundle --filter=ProductRemote",
    "build:cart:bundle": "turbo run build:bundle --filter=CartRemote",
    "build:shipping:apk": "turbo run build:apk --filter=ShippingAddressRemote",
    "build:shipping:bundle": "turbo run build:bundle --filter=ShippingAddressRemote",
    "build:apk": "pnpm run build:repack:apk",
    "build:bundle": "pnpm run build:profile:bundle",
    "build:eas": "eas build -p android --profile release",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.59.0",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "^3.7.4",
    "react-test-renderer": "19.1.0",
    "turbo": "^2.7.5",
    "typescript": "5.9.2",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
