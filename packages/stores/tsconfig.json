{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@repo/constants": ["../constants/src"],
      "@repo/constants/*": ["../constants/src/*"],
      "@repo/types": ["../types/src"],
      "@repo/types/*": ["../types/src/*"],
      "@repo/utils": ["../utils/src/index.ts"],
      "@repo/utils/*": ["../utils/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
